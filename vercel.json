{
  "version": 2,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static-build" 
    },
    {
      "src": "api/**/*.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
